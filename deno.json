{
	"tasks": {
		"fmt": "deno run --allow-read --allow-env --allow-write npm:prettier --write ."
	},
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"lib": ["esnext", "dom", "dom.iterable", "deno.window"]
	},
	"lint": {
		"rules": {
			"include": ["camelcase", "eqeqeq", "no-const-assign"]
		}
	},
	"fmt": {
		"options": {
			"singleQuote": true,
			"semiColons": true,
			"useTabs": true
		}
	}
}
