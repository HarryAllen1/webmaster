{
	"tasks": {
		"fmt": "deno run --allow-read --allow-env --allow-write npm:prettier --write ."
	},
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"lib": ["esnext", "dom", "dom.iterable", "deno.window"]
	},
	"lint": {
		"rules": {
			"include": ["camelcase", "eqeqeq", "no-const-assign"]
		},
		"files": {
			"exclude": ["**/*.bundle.js"]
		}
	},
	"fmt": {
		"singleQuote": true,
		"semiColons": true,
		"useTabs": true
	},
	"imports": {
		"tailwindcss": "npm:tailwindcss",
		"tailwindcss/plugin": "npm:tailwindcss/plugin",
		"@tailwindcss/typography": "npm:@tailwindcss/typography",
		"@tailwindcss/forms": "npm:@tailwindcss/forms",
		"preline/plugin": "npm:preline/plugin",
		"flowbite/plugin": "npm:flowbite/plugin"
	}
}
