{
	"tasks": {
		"build-log": "deno run --allow-net --allow-env --allow-read --allow-write ./create-work-log.ts"
	},
	"compilerOptions": {
		"checkJs": true,
		"lib": ["esnext", "dom", "dom.iterable", "deno.window"]
	},
	"lint": {
		"rules": {
			"include": ["camelcase", "eqeqeq", "no-const-assign"]
		}
	},
	"fmt": {
		"options": {
			"singleQuote": true,
			"semiColons": true,
			"useTabs": true
		}
	}
}
